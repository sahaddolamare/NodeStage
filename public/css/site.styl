@import url('https://fonts.googleapis.com/css?family=Titillium+Web:300')

.tdf, h1, h2, h3, h4
  font-family 'Titillium Web', sans-serif

html
  background-image url(/img/background-3.jpg)
  background-position center center
  background-repeat no-repeat
  background-attachment fixed  
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover
  height 100%

body
  // background rgba(35,35,35,1)
  background none
  background-attachment fixed
  padding-top 50px
  padding-bottom 50px
  position fixed
  height 100%
  left 0
  right 0
  top 0
  bottom 0
  overflow auto

.navbar
  height 51px
  .navbar-header
    .brand-container
      position relative
      float left
      height 40px
      width 54px
      a
        img.brand
          cursor pointer
          position absolute
          left 0
          height 40px
          margin-top 5px
          opacity 1
          -webkit-transition opacity .2s ease-in-out   
          -moz-transition opacity .2s ease-in-out   
          -o-transition opacity .2s ease-in-out   
          -ms-transition opacity .2s ease-in-out   
          transition opacity .2s ease-in-out
      a:nth-child(2) img.brand:hover
        opacity: 0;
    .navbar-brand
      margin-left 0
  .navbar-collapse
    li
      a
        span
          float left
          margin-right 4px
          
.navbar a
  -webkit-transition all 200ms ease-out
  transition all 200ms ease-out
          
section.content
  height calc(100% - 102px)
  overflow-y auto
  padding-top 21px
  
.usermenu
  li.userbox > a
    margin-top -6px
    height 57px
  li.userbox ul.dropdown-menu
    margin-top -1px
    li a
      padding-left 26px
  small
    font-size 65%
    margin-top -6px
  img[gravatar-src]
    height 36px
    margin-bottom -30px
    margin-right 25px
    margin-top -18px
    border 1px solid #343434
    border-radius 50%
    -moz-border-radius 50%
    -webkit-border-radius 50%
  .username-pull
    margin-left 61px 
  .menu-icon
    float left
    margin-top -22px
    margin-left 5px
  .caret
    float right
    margin-top 8px
    
#stage
  background rgba(35,35,35,0.5)
  overflow hidden
  position fixed
  height 100%
  width 100%
      
footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2
    
#signin
  padding-bottom 0
  margin-bottom 0
  min-width 220px
  .navbar-form
    margin-bottom 0
    .form-group
      margin-bottom 5px
    .invalid
      border 1px solid #FF0000
    button.btn
      width calc(100% + 31px)
      border-radius 0
      margin-left -15px
      margin-top 2px
      span.iconic
        right 5px
        top 3px
    
.margin-left-med
  margin-left 10px

.dropdown-menu
  -webkit-transition all 200ms ease-out
  transition all 200ms ease-out
  opacity 0

.open .dropdown-menu
  opacity 1

.ng-enter
  -webkit-transition 400ms linear all
  transition 400ms linear all
  opacity 0.2

.ng-enter.ng-enter-active
  opacity 1
      
.h3-icon
  float left
  margin-top -5px
  padding-right 5px

.h4-icon
  float left
  margin-top -9px
  padding-right 5px

.lgr-icon
  float left
  padding-right 5px
  
.mobile-only
  display none
  
.desktop-only
  display block
  
.login-mobile-spacer
  margin-bottom 8px !important
  
.navbar-center
  text-align center
  
.ticker-container
  cursor pointer
  overflow hidden
  height 300px
  p.navbar-text
    float none !important
    text-align center
  -webkit-transition all 300ms ease-out
  transition all 300ms ease-out
  .expanded-footer
    display none
    
.ticker-container:hover
  background rgba(24,24,24,0.9)
  -webkit-transition all 200ms ease-out
  transition all 200ms ease-out
  
.ticker-container.expanded
  background rgba(32,32,32,0.9)
  margin-top -250px
  -webkit-transition all 150ms ease-out
  transition all 150ms ease-out
  padding-left 0
  padding-right 0
  position relative
  #ticker
    background rgba(24,24,24,0.8)
    height 249px
    margin-left 0
    margin-right 0
    padding-top 10px
    -webkit-transition none
    transition none
    #ftrmsg
      display block
      position absolute
      bottom 16px
      left 10px
      height auto
      margin-bottom 0
    .ticker-msg
      display block
      height 22px
      margin-bottom 2px
      position relative
      width 50%
      text-align left
      padding-left 15px
      margin-left 0
      margin-right 0
  #ticker.on
    -webkit-transition none
    transition none
  .expanded-footer
    color #EFEFEF
    display block
    width 49%
    border-left 1px solid #343434
    position absolute
    right 0
    top 15px
    height 220px
    padding-left 15px
    background-image url(/img/brand.png)
    background-size 300px
    background-repeat no-repeat
    opacity 0.6
    text-align right
    padding-right 15px

#ticker
  height 51px
  overflow hidden
  margin-top 0
  padding-top 15px
  -webkit-transition opacity, margin-top 200ms ease
  transition opacity, margin-top 200ms ease
  text-align center
  width 100%
  span#ftrmsg
    display none
  .ticker-msg
    display none
    width 50%
    margin-left auto
    margin-right auto
    .iconic
      left -4px
      top 3px
      display inline !important
  .ticker-msg.success
    color green
  .ticker-msg.error
    color red
  > span:first-child
    display block !important

#ticker.on
    opacity 0.2
    margin-top -40px
    -webkit-transition all 0ms
    transition all 0ms
  
@media (max-width: 767px)
  .center
    margin-left auto
    margin-right auto
    width 200px
  .mobile-only
    display block
  .desktop-only
    display none
  .expanded-footer
    display none
  .ticker-container.expanded
    #ticker
      .ticker-msg
        width 100%
        text-align center
        margin-left auto
        margin-right auto
        padding-left 0
    .expanded-footer
      display none !important
  #ticker
    .ticker-msg
      width 100%
      margin-left 0
      margin-right 0
        
@media all and (min-width: 768px)
  #user
    margin-right 0
  .panel-infoview
    min-height 455px

