.ticker-container
  cursor pointer
  overflow hidden
  height 300px
  p.navbar-text
    float none !important
    text-align center
  transition all 300ms ease-out
  .expanded-footer
    display none
    
.ticker-container:hover
  background rgba(24,24,24,0.9)
  transition all 200ms ease-out
  
.ticker-container.expanded
  background rgba(24,24,24,0.9)
  cursor default
  margin-top -250px
  transition all 150ms ease-out
  padding-left 0
  padding-right 0
  position relative
  #ticker
    background rgba(24,24,24,0.8)
    height 249px
    margin-left 0
    margin-right 0
    padding-top 10px
    transition none
    #ftrmsg
      display block
      position absolute
      bottom 16px
      left 10px
      height auto
      margin-bottom 0
    .ticker-msg
      display block
      height 22px
      margin-bottom 2px
      position relative
      width 50%
      text-align left
      padding-left 15px
      margin-left 0
      margin-right 0
  #ticker.on
    margin-top 0
    opacity 1
    transition none
  .expanded-footer
    color #EFEFEF
    display block
    width 50%
    border-left 2px solid rgba(201,204,204,0.4)
    position absolute
    right 0
    top 15px
    height 220px
    padding-left 15px
    background-image url(/img/brand.png)
    background-size 300px
    background-repeat no-repeat
    opacity 0.55
    text-align right
    padding-right 15px

#ticker
  height 51px
  overflow hidden
  margin-top 0
  padding-top 15px
  transition opacity, margin-top 200ms ease
  text-align center
  width 100%
  span#ftrmsg
    display none
  .ticker-msg
    display none
    width 50%
    margin-left auto
    margin-right auto
    .iconic
      left -4px
      top 3px
      display inline !important
  .ticker-msg.success
    color green
  .ticker-msg.error
    color red
  > span:first-child
    display block !important

#ticker.on
    opacity 0.2
    margin-top -40px
    transition all 0ms

.in-progress
  animation flashIcon 800ms infinite linear

#ddbnav
  .ddbnav-icon
    margin-top 10px
    margin-right 10px
    position relative
    z-index 1
  .ddbnav-icon:before
    color #ABABAB
    font-size 20px
  .ddbnav-icon.connected:before
    color #4CFF4C

.ddb-view
  .well
    margin-bottom 0
    textarea
      background none
      border none
      padding 2px
      resize none
      font-size 12px
      font-family monospace, sans-serif
    input[type=text]
      width 100%
      border 1px solid #CCCCCC
      background #F9F9F9
      border-radius 2px


@media (max-width: 767px)
  .navbar-inverse.navbar-fixed-top
    height initial
  .center
    margin-left auto
    margin-right auto
    width 200px
  .mobile-only
    display block
  .desktop-only
    display none
  .expanded-footer
    display none
  .usermenu.mobile-only
    margin-bottom 0
  .ticker-container.expanded
    #ticker
      .ticker-msg
        width 100%
        text-align left
        margin-left auto
        margin-right auto
        padding-left 15px
    .expanded-footer
      display none !important
  #ticker
    .ticker-msg
      width 100%
      margin-left 0
      margin-right 0
  #userSearch
    margin 5px 0
    float left
        
@media all and (min-width: 768px)
  #user
    margin-right 0
  .panel-infoview
    min-height 455px
  #nav
    height 50px !important
    
@-webkit-keyframes flashIcon
  0%
    opacity 0.3
  50%
    opacity 1
  100%
    opacity 0.3
    
@keyframes flashIcon
  0%
    opacity 0.3
  50%
    opacity 1
  100%
    opacity 0.3