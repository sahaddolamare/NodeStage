html
  background-image url(/img/background-6.jpg)
  background-position center center
  background-repeat no-repeat
  background-attachment fixed  
  background-size cover
  height 100%

body
  // background rgba(35,35,35,1) // Test style for transistionable backgrounds on body
  background none
  background-attachment fixed
  padding-top 50px
  padding-bottom 50px
  position fixed
  height 100%
  left 0
  right 0
  top 0
  bottom 0
  overflow auto

.tdf, h1, h2, h3, h4
  font-family 'Titillium Web', sans-serif
  font-weight 300
  
.tdfl
  font-family 'Titillium Web', sans-serif
  font-weight 200

.h3-icon, .h4-icon, .lgr-icon
  float left
  padding-right 5px
      
.h3-icon
  margin-top -5px

.h4-icon
  margin-top -9px
  
.mobile-only
  display none
  
.login-mobile-spacer
  margin-bottom 8px !important
  
.margin-left-med
  margin-left 10px
  
.dropdown-menu
  transition all 200ms ease-out
  opacity 0

.open .dropdown-menu
  opacity 1
  
.modal
  background rgba(32,32,32,0.7)
  margin-top 51px
  
.navbar-center
  text-align center

// Styles for stage animation using ngAnimate styles
[data-ng-view].ng-enter
  opacity 0.2
  transition opacity 300ms linear

[data-ng-view].ng-enter-active
  opacity 1
  
