  height 51px
  background-color #0A0A0A
  .navbar-header
    .brand-container
      position relative
      float left
      height 51px
      margin-left 5px
      width 54px
      img.brand
        cursor pointer
        position absolute
        left 0
        height 45px
        margin-top 2.5px
        opacity 1
        transition all .2s ease
      img.brand:hover
        opacity 0.85
        filter gray
        filter grayscale(.5)
        // filter url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0naHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmcnPjxmaWx0ZXIgaWQ9J2dyYXlzY2FsZSc+PGZlQ29sb3JNYXRyaXggdHlwZT0nbWF0cml4JyB2YWx1ZXM9JzAuMzMzMyAwLjMzMzMgMC4zMzMzIDAgMCAwLjMzMzMgMC4zMzMzIDAuMzMzMyAwIDAgMC4zMzMzIDAuMzMzMyAwLjMzMzMgMCAwIDAgMCAwIDEgMCcvPjwvZmlsdGVyPjwvc3ZnPiNncmF5c2NhbGU=")
        -webkit-filter grayscale(50%) 
        transition all .2s ease
    .navbar-brand
      margin-left 0
      padding-left 5px
      padding-right 5px
  .navbar-collapse
    background-color #0A0A0A
    li a span
      float left
      margin-right 4px
  a
    transition all 200ms ease-out

.usermenu
  li.userbox > a
    margin-top -6px
    height 57px
  li.userbox ul.dropdown-menu
    margin-top -1px
    li a
      padding-left 26px
  small
    font-size 65%
    margin-top -6px
  img[data-gravatar-src]
    height 36px
    margin-bottom -30px
    margin-right 25px
    margin-top -18px
    border 1px solid #343434
    border-radius 50%
  .username-pull
    margin-left 61px 
  .menu-icon
    float left
    margin-top -22px
    margin-left 5px
  .caret
    float right
    margin-top 8px
    
#navsignin
  padding-bottom 0
  margin-bottom 0
  min-width 300px
  .navbar-form
    margin-bottom 0
    .form-group
      margin-bottom 5px
      width 100%
      .input-group
        width 100%
        .input-group-addon
          width 40px
        input
          width 100%
    .invalid
      border 1px solid #FF0000
    button.btn
      width calc(100% + 31px)
      border-radius 0
      margin-left -15px
      margin-top 2px
      transition all 200ms ease-out
      span.iconic
        right 5px
        top 3px
    button.btn:hover
      transition all 200ms ease-out
      
#signin
  .login-mobile-spacer
    display block
  button.btn
    span.iconic
      right 5px
      top 3px

#stage
  background rgba(35,35,35,0.5)
  overflow hidden
  position fixed
  height 100%
  width 100%

section.content
  height calc(100% - 102px)
  overflow-y auto
  padding-top 21px

#userSearch
  float right
  input
    display inline
    font-size 14px
    height 25px
    padding 2px 3px
    width initial
  .label.user-count
    float right
    margin-left 5px
    margin-top 2px
  .btn.user-filter
    float right
    width 23.75px
    height 19.73px
    padding 1px 0
    margin-top 2px
    margin-left 5px
    .iconic:before
      font-size 13px !important

#userDisplay
  th
    cursor pointer
    span.iconic
      float right
    span.iconic:before
      font-size 13px
      margin-right 3px
      margin-top 2px
  th#userNameField
    max-width 235px
    min-width 235px
    overflow hidden
    width 235px
  th#firstNameField,
  th#lastNameField
    max-width 125px
    min-width 125px
    overflow hidden
    width 125px
  tr
    select
      display inline
      width 210px
  .ng-enter
    transition transform 100ms, opacity 100ms
  .ng-enter
    opacity 0
    transform translate3d(-100%, 0, 0)
  .ng-enter-active
    opacity 1
    transform translate3d(0, 0, 0)

footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2

