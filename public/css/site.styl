@import url('https://fonts.googleapis.com/css?family=Titillium+Web:300')

.tdf
  font-family 'Titillium Web', sans-serif

html
  background-image url(/img/background-1.jpg)
  background-position center center
  background-repeat no-repeat
  background-attachment fixed  
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover
  height 100%

body
  // background rgba(35,35,35,1)
  background none
  background-attachment fixed
  padding-top 50px
  padding-bottom 50px
  position absolute
  height 100%
  left 0
  right 0
  top 0
  bottom 0
  overflow auto

.navbar
  height 51px
  .navbar-header
    .brand-container
      position relative
      float left
      height 40px
      width 54px
      a
        img.brand
          cursor pointer
          position absolute
          left 0
          height 40px
          margin-top 5px
          opacity 1
          -webkit-transition opacity .2s ease-in-out   
          -moz-transition opacity .2s ease-in-out   
          -o-transition opacity .2s ease-in-out   
          -ms-transition opacity .2s ease-in-out   
          transition opacity .2s ease-in-out
      a:nth-child(2) img.brand:hover
        opacity: 0;
    .navbar-brand
      margin-left 0
  .navbar-collapse
    li
      a
        span
          float left
          margin-right 4px
          
.navbar a
  -webkit-transition all 200ms ease-out
  transition all 200ms ease-out
          
section.content
  height calc(100% - 102px)
  overflow-y auto
  padding-top 21px
  
.usermenu
  li.dropdown > a
    margin-top -6px
    height 57px
  li.dropdown ul.dropdown-menu
    margin-top -1px
  small
    font-size 65%
    margin-top -6px
  img[gravatar-src]
    height 36px
    margin-bottom -30px
    margin-right 25px
    margin-top -18px
    border 1px solid #343434
    border-radius 50%
    -moz-border-radius 50%
    -webkit-border-radius 50%
    
#stage
  background rgba(35,35,35,0.5)
  position fixed
  height 100%
  width 100%
      
footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2
    
#signin .navbar-form
  .form-group
    margin-bottom 5px
  a.btn
    margin-right 0
    
.margin-left-med
  margin-left 10px

.toast-top-right
  top 70px
  
.dropdown-menu
  -webkit-transition all 200ms ease-out
  transition all 200ms ease-out
  opacity 0

.open .dropdown-menu
  opacity 1

.ng-enter
  -webkit-transition 400ms linear all
  transition 400ms linear all
  opacity 0.2

.ng-enter.ng-enter-active
  opacity 1
  
 .fliph
  -moz-transform scaleX(-1)
  -o-transform scaleX(-1)
  -webkit-transform scaleX(-1)
  transform scaleX(-1)
  filter FlipH
  -ms-filter "FlipH"
  
.h3-icon
  float left
  margin-top -5px
  padding-right 5px

.h4-icon
  float left
  margin-top -9px
  padding-right 5px

.lgr-icon
  float left
  padding-right 5px
  
@media (max-width: 767px)
  .center
    margin-left auto
    margin-right auto
    width 200px
        
@media all and (min-width: 768px)
  #user
    margin-right 0
